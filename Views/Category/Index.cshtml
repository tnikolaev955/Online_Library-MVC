@model IEnumerable<Online_Library.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Категории</h1>

<p>
    <a asp-action="Create">Създай нова</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактиране</a> |
                <a href="#" onclick="confirmDelete('@item.Id','@item.Title')">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function confirmDelete(id,title) {
        if (confirm(`Сигурни ли сте че искате да изтриете категорията: ${title}`)) {
            window.location.href = `/Category/Delete/${id}`;
        }
    }

</script>