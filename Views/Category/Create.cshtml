@model Online_Library.View_Model.CategoryCreateVM;

@{
    ViewData["Title"] = "Create";
}

<h1>Създай</h1>

<h4>Категория</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Title" class="control-label"></label>
                <input asp-for="Category.Title" class="form-control" />
                <span asp-validation-for="Category.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.ParentId" class="control-label"></label>
                <select asp-for="Category.ParentId" class ="form-control">
                    @foreach(var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
            </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

